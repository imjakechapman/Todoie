{% extends "_layouts/_master.twig" %}

{% block content %}
  {% if message | length %}
  <div class="row">
    <div class="col-md-12">
      <div class="alert alert-info">
        <p>{{ message }}</p>
      </div>
    </div>
  </div>
  {% endif %}

  <div class="row">
    <div class="col-md-12">
      <form role="form" action="/todos/{{ todo.id }}/edit" method="POST">
        <input type='hidden' name="action" value="PUT">
        <div class="form-group">
          <input type="text" name="description" class="form-control" placeholder="What ya got going on?" value="{{ todo.description }}">
        </div>

        <button type="submit" class="btn btn-default">Edit Todo</button>
      </form>
    </div>
  </div>
{% endblock %}